@model App.Models.Product.Order

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    List<OrderDetail> list= ViewData["list"] as List<OrderDetail>;

}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Đơn hàng</h4>
    <hr />
    <dl class="row">

        <dt class = "col-sm-2">
            ID đơn hàng
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(Model.Id)
        </dd>
        <dt class = "col-sm-2">
            Người đặt hàng:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Owner.UserName)
        </dd>
        <dt class = "col-sm-2">
            Email/SDT người đặt hàng:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
           Địa chỉ người đặt hàng:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HomeAdress)
        </dd>
        <dt class = "col-sm-2">
            Ngày đặt hàng:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
        <dt class = "col-sm-2">
           Lời nhắn:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserMessage)
        </dd>
        <dt class = "col-sm-2">
           Số lượng sản phẩm:
        </dt>

        <table class="table">
        <thead>
            <tr>
            <th scope="col">ID</th>
            <th scope="col">Tên hàng</th>
            <th scope="col">Số lượng</th>
            <th scope="col">Đơn giá</th>
            </tr>
        </thead>
        <tbody>
           @{
               foreach (var item in list){
                    <tr>
                    <th scope="row">@item.ProductId</th>
                    <td>@item.Product.Title</td>
                    <td>@item.Quantity</td>
                    <td>@item.Product.Price</td>
                    <td></td>
                    </tr>
               }
           }
            </tbody>
        <th scope="col">Thành tiền:</th> <th scope="col"></th> <th scope="col"></th> <th scope="col">@Html.DisplayFor(model => model.TotalPrice)</th>
        </table>

    </dl>
</div>
<div>
    <a asp-action="Index">Danh sách đơn hàng</a>
</div>
